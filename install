#!/usr/bin/env bash

install_file() {
  local source=$1
  local target=$2

  if [ ! -e "$HOME/$target" ]; then
    ln -s `pwd`/$source $HOME/$target
  else
    echo "Skipping $target, file already exists"
  fi
}

install_file "gitconfig" ".gitconfig"
install_file "gitignore" ".gitignore"
install_file "tmux.conf" ".tmux.conf"
